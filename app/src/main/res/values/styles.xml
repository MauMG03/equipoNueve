<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyFloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@drawable/inventory_item_background</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/inventory_item_background</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>